{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "Boot Image Schema",
	"type": "object",
	"required": [ "id", "image" ],
	"additionalProperties": false,
	"properties": {
		"id": {
            "$ref": "types.json#definitions/id"
		},
		"image": {
			"type": "string",
			"pattern": "^[a-zA-Z][a-zA-Z0-9-]+$"
		},
        "kOpts": {
            "type": "string"
        },
		"versions": {
			"type": "array",
			"items": {
				"$ref": "version.json#"
			},
			"uniqueItems": true
		}
	}
}
