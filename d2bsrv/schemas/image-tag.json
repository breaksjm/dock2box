{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Image Tag Schema",
  "type": "object",
  "required": [
    "id",
    "tag",
    "imageId",
    "created"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "$ref": "types.json#definitions/id"
    },
    "tag": {
      "type": "string",
      "pattern": "^[a-z0-9-_]+$"
    },
    "imageId": {
      "$ref": "types.json#definitions/id"
    },
    "created": {
      "type": "string",
      "format": "date-time"
    }
  }
}
