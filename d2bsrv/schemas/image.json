{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Image Schema",
    "type": "object",
    "required": [ "id", "image", "type", "bootImageId", "bootImageVersion" ],
    "additionalProperties": false,
    "properties": {
        "id": {
            "$ref": "types.json#definitions/id"
        },
        "image": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9-]+$"
        },
        "type": {
            "type": "string",
            "enum": [ "file", "docker" ]
        },
        "bootImageId": {
            "$ref": "types.json#definitions/id"
        },
        "bootImageVersion": {
            "$ref": "types.json#definitions/version"
        },
        "versions": {
            "type": "array",
            "items": {
                "$ref": "version.json#"
            },
            "uniqueItems": true
        }
    }
}
