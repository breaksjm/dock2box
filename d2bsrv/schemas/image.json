{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Image Schema",
  "oneOf": [
    {
      "$ref": "#/definitions/fileOrDocker"
    },
    {
      "$ref": "#/definitions/boot"
    }
  ],
  "definitions": {
    "fileOrDocker": {
      "type": "object",
      "required": [
        "id",
        "image",
        "sha256",
        "type",
        "bootImageTagId"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "types.json#definitions/id"
        },
        "image": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9-]+$"
        },
        "sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]+$"
        },
        "type": {
          "type": "string",
          "enum": [
            "file",
            "docker"
          ]
        },
        "bootImageTagId": {
          "$ref": "types.json#definitions/id"
        }
      }
    },
    "boot": {
      "type": "object",
      "required": [
        "id",
        "image",
        "sha256",
        "type",
        "kOpts"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "$ref": "types.json#definitions/id"
        },
        "image": {
          "type": "string",
          "pattern": "^[a-zA-Z][a-zA-Z0-9-]+$"
        },
        "sha256": {
          "type": "string",
          "pattern": "^[0-9a-f]+$"
        },
        "type": {
          "type": "string",
          "enum": [
            "boot"
          ]
        },
        "kOpts": {
          "type": "string"
        }
      }
    }
  }
}
