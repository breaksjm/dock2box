{{template "head" .}}
<table data-toggle="table"
       data-url="/pci/json"
       data-query-params="queryParams"
       data-pagination="true"
       data-sort-name="slot"
       data-sort-order="asc"
       data-show-toggle="true"
       data-show-columns="true"
       data-search="true"
       data-select-item-name="toolbar"
       data-cache="true"
       class="table table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th data-field="slot" data-sortable="true">Slot</th>
      <th data-field="class_id" data-sortable="true" data-visible="false">Class ID</th>
      <th data-field="class" data-sortable="true">Class</th>
      <th data-field="vendor_id" data-sortable="true" data-visible="false">Vendor ID</th>
      <th data-field="device_id" data-sortable="true" data-visible="false">Device ID</th>
      <th data-field="vendor" data-sortable="true">Vendor</th>
      <th data-field="device" data-sortable="true">Device</th>
      <th data-field="svendor_id" data-sortable="true" data-visible="false">SVendor ID</th>
      <th data-field="sdevice_id" data-sortable="true" data-visible="false">SDevice ID</th>
      <th data-field="sname" data-sortable="true">SName</th>
    </tr>
  </thead>
</table>
{{template "footer" .}}
