{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Global Schema",
  "definitions": {
    "boolean": {
      "type": "string",
      "enum": [
        "true",
        "false"
      ]
    },
    "hwaddr": {
      "type": "string",
      "pattern": "^([0-9a-f]{2}:){5}[0-9a-f]{2}$"
    },
    "ipv4": {
      "type": "string",
      "pattern": "^([0-9]{1,3}\\.){3}[0-9]{1,3}$"
    }
  },
  "type": "object",
  "required": [
    "docker_mirrorlist",
    "domain",
    "gpt",
    "image",
    "install_image",
    "install_script",
    "kexec",
    "main_script",
    "naming_scheme",
    "post_script",
    "version"
  ],
  "additionalProperties": false,
  "properties": {
    "docker_mirrorlist": {
      "type": "string"
    },
    "domain": {
      "type": "string",
      "pattern": "^[a-z]([a-z0-9-]+\\.)+[a-z]+$"
    },
    "gpt": {
      "$ref": "#/definitions/boolean"
    },
    "image": {
      "type": "string",
      "pattern": "^.+$"
    },
    "install_image": {
      "type": "string",
      "pattern": "^.+$"
    },
    "install_script": {
      "type": "string"
    },
    "kexec": {
      "$ref": "#/definitions/boolean"
    },
    "main_script": {
      "type": "string"
    },
    "naming_scheme": {
      "type": "string"
    },
    "post_script": {
      "type": "string"
    },
    "version": {
      "pattern": "^([a-z0-9]{7}|latest)$",
      "type": "string"
    }
  }
}
