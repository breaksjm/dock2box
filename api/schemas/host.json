{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Host Schema",
  "type": "object",
  "required": [
    "id",
    "host",
    "build",
    "debug",
    "gpt",
    "tagId",
    "tenantId",
    "siteId"
  ],
  "properties": {
    "id": {
      "$ref": "types.json#definitions/id"
    },
    "host": {
      "$ref": "types.json#definitions/hostname"
    },
    "build": {
      "type": "boolean"
    },
    "debug": {
      "type": "boolean"
    },
    "gpt": {
      "type": "boolean"
    },
    "tagId": {
      "$ref": "types.json#definitions/id"
    },
    "kOpts": {
      "type": "string"
    },
    "tenantId": {
      "$ref": "types.json#definitions/id"
    },
    "labels": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-zA-Z][a-zA-Z0-9-]+$"
      },
      "uniqueItems": true
    },
    "siteId": {
      "$ref": "types.json#definitions/id"
    }
  }
}
