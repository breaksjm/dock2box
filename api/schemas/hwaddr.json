{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "HWAddr Schema",
	"definitions": {
		"hostname": {
			"type": "string",
			"pattern": "^[a-z][a-z0-9-]+\\.trading\\.imc\\.intra$"
		},
		"interface": {
			"type": "string",
			"pattern": "^[a-z][a-z0-9]+$"
		}
	},
    "type": "object",
    "required": [ "hostname", "interface" ],
    "additionalProperties": false,
	"properties": {
		"hostname": {
			"$ref": "#/definitions/hostname"
		},
		"interface": {
			"$ref": "#/definitions/interface"
		}
	}
}
