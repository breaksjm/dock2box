{
  "templDir": "/app/templates",
  "schemaURI": "file:///app/schemas",
  "routes": [
    {
      "endpoint": "/hosts",
      "type": "api",
      "path": "/host",
      "schema": "host.json"
    },
    {
      "endpoint": "/images",
      "type": "api",
      "path": "/image",
      "schema": "image.json"
    },
    {
      "endpoint": "/hwaddr",
      "type": "api",
      "path": "/hwaddr",
      "schema": "hwaddr.json"
    },
    {
      "endpoint": "/pxe/{name}",
      "type": "template",
      "template": "host"
    },
    {
      "endpoint": "/schemas",
      "type": "static",
      "path": "schemas"
    }
  ]
}
